---
import BaseLayout from '../layouts/BaseLayout.astro';
import Section from '../components/ui/Section.astro';
import Card from '../components/ui/Card.astro';
import Button from '../components/ui/Button.astro';
import { Image } from 'astro:assets';
import ImageReveal from '../components/react/ImageReveal';

import northAmericanHubImg from '@assets/photo-1566576721346-d4a3b4eaeb55.jpg';
import westCoastDistributionImg from '@assets/photo-1586528116311-ad8dd3c8310d.jpg';
import eastCoastOperationsImg from '@assets/photo-1553413077-190dd305871c.jpg';
import southernManufacturingCenterImg from '@assets/photo-1581091226825-a6a2a5aee158.jpg';

import ctaBgImg from '@assets/photo-1565043589221-1a6fd9ae45c7.jpg';

const facilities = [
  {
    name: '公司总部',
    location: '广西南宁',
    address: '广西南宁市青秀区建政路5号',
    type: '管理与研发中心',
    size: '核心办公区',
    image: northAmericanHubImg,
    icon: `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
    </svg>`,
    phone: '0771-12345678',
    email: 'contact@gxrsky.com',
    manager: '业务部',
    hours: '周一至周五: 8:30 - 18:00',
    features: [
      '公司行政管理中心',
      '技术研发中心',
      '数据处理中心',
      '客户服务中心',
      '多功能展示厅'
    ],
    certifications: ['高新技术企业', 'ISO 9001认证', '测绘甲级资质']
  },
  {
    name: '遥感数据处理中心',
    location: '广西南宁',
    address: '广西南宁市良庆区',
    type: '数据生产基地',
    size: '高性能计算集群',
    image: westCoastDistributionImg,
    icon: `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01" />
    </svg>`,
    phone: '0771-87654321',
    email: 'data@gxrsky.com',
    manager: '生产部',
    hours: '24小时自动化运行',
    features: [
      '卫星影像接收处理',
      '实景三维建模生产',
      '海量数据存储',
      '云计算服务平台',
      '保密数据管理'
    ],
    certifications: ['信息安全管理体系认证', 'CMMI认证']
  }
];
---

<BaseLayout
  title="关于我们 | 广西遥感空间信息科技有限公司"
  description="了解广西遥感空间信息科技有限公司的发展历程、分支机构及核心优势。"
>
  <!-- Hero -->
  <section class="relative py-24 bg-slate-900 overflow-hidden">
    <div class="absolute inset-0">
      <Image 
        src={eastCoastOperationsImg}
        alt="Corporate office background"
        class="w-full h-full object-cover opacity-30"
        width={2070}
        height={1380}
      />
      <div class="absolute inset-0 bg-linear-to-b from-slate-900/50 to-slate-900"></div>
    </div>
    
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10 text-center">
      <div class="inline-block px-4 py-2 mb-6 bg-blue-900/50 border border-blue-500/30 backdrop-blur-md text-blue-300 text-sm font-semibold rounded-full">
        专业 · 专注 · 创新
      </div>
      <h1 class="text-4xl md:text-6xl font-bold text-white mb-6 leading-tight">
        关于 <span class="text-transparent bg-clip-text bg-linear-to-r from-blue-400 to-teal-400">我们</span>
      </h1>
      <p class="text-xl text-slate-300 max-w-3xl mx-auto leading-relaxed">
        广西遥感空间信息科技有限公司是广西自然资源遥感院下属的高新技术企业，致力于为自然资源管理、生态文明建设和经济社会发展提供全方位的空间地理信息服务。
      </p>
    </div>
  </section>

  <!-- Facilities Grid -->
  <Section class="bg-white">
    <div class="space-y-24">
      {facilities.map((facility, index) => (
        <div class={`flex flex-col ${index % 2 === 1 ? 'lg:flex-row-reverse' : 'lg:flex-row'} gap-12 items-center`}>
          <!-- Image -->
          <div class="w-full lg:w-1/2">
            <ImageReveal client:load delay={0.1}>
              <div class="relative rounded-2xl overflow-hidden shadow-2xl group">
                <Image 
                  src={facility.image}
                  alt={facility.name}
                  class="w-full h-full object-cover aspect-4/3 group-hover:scale-105 transition-transform duration-700"
                  width={800}
                  height={600}
                />
                <div class="absolute inset-0 bg-linear-to-t from-slate-900/60 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
              </div>
            </ImageReveal>
          </div>

          <!-- Content -->
          <div class="w-full lg:w-1/2">
            <div class="flex items-center mb-6">
              <div class="w-12 h-12 rounded-lg bg-blue-100 text-blue-600 flex items-center justify-center mr-4" set:html={facility.icon} />
              <div>
                <h2 class="text-3xl font-bold text-slate-900">{facility.name}</h2>
                <p class="text-slate-500 font-medium">{facility.type}</p>
              </div>
            </div>

            <div class="bg-slate-50 rounded-xl p-8 mb-8 border border-slate-100">
              <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
                <div>
                  <h4 class="text-sm font-semibold text-slate-900 uppercase tracking-wider mb-2">地址</h4>
                  <p class="text-slate-600">{facility.address}</p>
                </div>
                <div>
                  <h4 class="text-sm font-semibold text-slate-900 uppercase tracking-wider mb-2">联系方式</h4>
                  <p class="text-slate-600">{facility.phone}</p>
                  <p class="text-slate-600">{facility.email}</p>
                </div>
                <div>
                  <h4 class="text-sm font-semibold text-slate-900 uppercase tracking-wider mb-2">工作时间</h4>
                  <p class="text-slate-600">{facility.hours}</p>
                </div>
                <div>
                  <h4 class="text-sm font-semibold text-slate-900 uppercase tracking-wider mb-2">负责人</h4>
                  <p class="text-slate-600">{facility.manager}</p>
                </div>
              </div>
            </div>

            <div class="mb-8">
              <h3 class="text-lg font-bold text-slate-900 mb-4">主要职能</h3>
              <ul class="space-y-3">
                {facility.features.map((feature) => (
                  <li class="flex items-center text-slate-600">
                    <svg class="w-5 h-5 text-teal-500 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                    {feature}
                  </li>
                ))}
              </ul>
            </div>

            <div>
              <h3 class="text-lg font-bold text-slate-900 mb-4">资质认证</h3>
              <div class="flex flex-wrap gap-3">
                {facility.certifications.map((cert) => (
                  <span class="px-3 py-1 bg-blue-50 text-blue-700 text-sm font-medium rounded-full border border-blue-100">
                    {cert}
                  </span>
                ))}
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>
  </Section>

  <!-- CTA -->
  <Section class="relative overflow-hidden bg-slate-900 py-24">
    <div class="absolute inset-0">
      <Image 
        src={ctaBgImg}
        alt="World map background"
        class="w-full h-full object-cover opacity-20"
        width={2070}
        height={1380}
      />
      <div class="absolute inset-0 bg-linear-to-r from-blue-900/90 to-slate-900/90"></div>
    </div>
    
    <div class="container mx-auto px-4 relative z-10 text-center">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">
        期待与您的合作
      </h2>
      <p class="text-xl text-slate-300 mb-10 max-w-2xl mx-auto">
        无论是项目合作还是技术咨询，我们都随时为您提供支持。
      </p>
      <div class="flex flex-col sm:flex-row gap-6 justify-center">
        <!--
        <Button href="/rfq" size="lg" class="bg-blue-600! hover:bg-blue-700! text-white!">
          联系我们
        </Button>
        -->
      </div>
    </div>
  </Section>
</BaseLayout>
