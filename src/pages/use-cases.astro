const stats = [
  {
    value: "80+",
    label: "服务市县",
    iconName: "Map",
  },
  {
    value: "400+",
    label: "软件授权",
    iconName: "Package",
  },
  {
    value: "1000+",
    label: "专业用户",
    iconName: "Users",
  },
  {
    value: "20+",
    label: "荣誉奖项",
    iconName: "CheckCircle2",
  },
];
---

<BaseLayout
  title="应用案例 | 广西遥感空间信息科技有限公司"
  description="探索我们如何利用遥感与空间信息技术，为自然资源、应急、环保等行业解决实际问题。"
>
  <!-- Hero -->
  <section class="relative py-24 bg-slate-900 overflow-hidden">
    <div class="absolute inset-0">
      <Image
        src={heroBgImg}
        alt="Industry solutions background"
        class="w-full h-full object-cover opacity-30"
        width={2070}
        height={1380}
      />
      <div
        class="absolute inset-0 bg-linear-to-b from-slate-900/50 to-slate-900"
      >
      </div>
    </div>

    <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
      <div class="max-w-4xl">
        <div
          class="inline-block px-4 py-2 mb-6 bg-blue-900/50 border border-blue-500/30 backdrop-blur-md text-blue-300 text-sm font-semibold rounded-full"
        >
          应用案例
        </div>
        <h1
          class="text-4xl md:text-6xl font-bold text-white mb-6 leading-tight"
        >
          <span
            class="text-transparent bg-clip-text bg-linear-to-r from-blue-400 to-teal-400"
            >实践案例</span
          >
        </h1>
        <p class="text-xl text-slate-300 max-w-3xl leading-relaxed">
          我们为各行各业提供精准、高效的空间信息解决方案，解决实际业务挑战，创造可衡量的价值。
        </p>
      </div>
    </div>
  </section>

  <!-- Use Case Tabs -->
  <Section>
    <div class="mb-12">
      <h2 class="text-3xl md:text-4xl font-bold text-slate-900 mb-4">
        重点项目展示
      </h2>
      <p class="text-lg text-slate-600 max-w-3xl">
        以下是我们承担的部分重点研发与应用项目，展示了我们在不同领域的技术实力与服务能力。
      </p>
    </div>
    <UseCaseTabs useCases={useCases} client:load />
  </Section>

  <!-- Stats Cards -->
  <Section background="gray">
    <StatsCards stats={stats} client:load />
  </Section>
</BaseLayout>
