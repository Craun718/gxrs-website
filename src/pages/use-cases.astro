---
import { Image } from "astro:assets";
import foodBeverageImg from "@assets/photo-1542838132-92c53300491e.jpg";
import heroBgImg from "@assets/photo-1551288049-bebda4e38f71.jpg";
import consumerGoodsImg from "@assets/photo-1558618666-fcd25c85cd64.jpg";
import technologyImg from "@assets/photo-1518770660439-4636190af475.jpg";
import automotiveImg from "@assets/photo-1581091226825-a6a2a5aee158.jpg";
import healthcareImg from "@assets/photo-1587854692152-cbe660dbde88.jpg";
import ecommerceImg from "@assets/photo-1607082349566-187342175e2f.jpg";
import StatsCards from "../components/react/StatsCards";
import UseCaseTabs from "../components/react/UseCaseTabs";
import Section from "../components/ui/Section.astro";
import BaseLayout from "../layouts/BaseLayout.astro";

const useCases: any[] = [
  {
    industry: "自然资源监管",
    iconName: "Tree",
    image: ecommerceImg,
    challenge:
      "面对广西复杂地形地貌和气象条件下自然资源监管需求，传统人工调查手段难以满足快速、精准的监测要求。",
    solution:
      "实施“广西自然资源卫星遥感智能监测关键技术与应用示范”项目，基于历年遥感影像构建自然资源基础要素与专题要素识别样本库，研发自然资源遥感综合监测平台。",
    results: [
      "项目获自治区批复立项",
      "批复经费870万元",
      "建立自然资源智能识别模型",
      "提供精准技术支撑",
    ],
  },
  {
    industry: "国土空间规划",
    iconName: "Map",
    image: healthcareImg,
    challenge:
      "规划业务需求和应用现状亟需提升治理能力，现有数据未充分挖掘可视化与智能化潜力。",
    solution:
      "开展“国土空间规划实景三维智能可视化分析平台研发与应用”，依托23.76万平方公里地形级三维模型和384平方公里城市级三维模型，构建立体化决策分析体系。",
    results: [
      "项目获自治区批复立项",
      "批复经费400万元",
      "打造地理信息数据底座",
      "促进治理模式转型升级",
    ],
  },
  {
    industry: "生态屏障监测",
    iconName: "Mountain",
    image: automotiveImg,
    challenge:
      "南方生态屏障环境保护需求迫切，需对林业、漓江流域、北部湾流域等典型区域进行生态综合监测。",
    solution:
      "承担高分专项“广西南方生态屏障遥感监测体系建设与应用”，利用高分影像、DEM等数据，基于人工智能构建生态要素遥感识别与变化监测智能体系。",
    results: [
      "广西2022年唯一入选项目",
      "批复经费2520万元",
      "开展生态价值评估研究",
      "构建智能监测体系",
    ],
  },
  {
    industry: "露天矿山监测",
    iconName: "AlertTriangle",
    image: technologyImg,
    challenge:
      "露天矿山分布广、监管难度大，越界开采、以采代探等违法违规现象时有发生。",
    solution:
      "作为广西露天矿山监测试点项目承建单位，承担73个矿山监测任务，利用实景三维测图系统实现“早发现、早分析”。",
    results: [
      "监测覆盖73个矿山",
      "荣获20大测绘地理信息亮点工程",
