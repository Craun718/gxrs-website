---
import { NAVIGATION, SITE } from "@config/site";
import { Mail, Package } from "lucide-react";
---

<footer class="bg-slate-900 text-slate-300">
  <div class="container mx-auto px-4 py-16 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 gap-12 lg:grid-cols-4">
      <!-- Company Info -->
      <div class="lg:col-span-1 space-y-6">
        <a href="/" class="flex items-center space-x-3 group">
          <div class="flex items-center justify-center w-12 h-12 rounded-lg bg-linear-to-br from-blue-600 to-teal-600">
            <Package className="w-7 h-7 text-white" />
          </div>
          <span class="text-xl font-bold text-white">
            广西遥感空间信息科技有限公司
          </span>
        </a>
        <p class="text-sm text-slate-400 leading-relaxed max-w-xs">
          {SITE.description}
        </p>
        <div class="flex space-x-4">
          <!-- WeChat QR Code Popover -->
          <div class="relative group">
            <button
              class="w-10 h-10 flex items-center justify-center rounded-lg bg-slate-800 text-slate-400 hover:bg-green-600 hover:text-white transition-all"
              aria-label="WeChat"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M8.5,14.5c0.1,0.3,0.3,0.5,0.6,0.6c0.3,0.1,0.6,0.1,0.9-0.1c0.3-0.2,0.5-0.4,0.5-0.7c0-0.3-0.1-0.6-0.3-0.8
                  C9.9,13.3,9.6,13.2,9.3,13.2C9,13.3,8.7,13.5,8.6,13.7C8.4,14,8.4,14.3,8.5,14.5z M15.5,14.5c0.1,0.3,0.3,0.5,0.6,0.6
                  c0.3,0.1,0.6,0.1,0.9-0.1c0.3-0.2,0.5-0.4,0.5-0.7c0-0.3-0.1-0.6-0.3-0.8c-0.2-0.2-0.5-0.3-0.8-0.2c-0.3,0.1-0.6,0.2-0.7,0.5
                  C15.4,14,15.4,14.3,15.5,14.5z M12,2C6.5,2,2,6,2,11c0,2.9,1.5,5.6,4.1,7.2c-0.2,1.3-0.7,2.7-1.7,3.7c2.3,0.1,4.2-0.6,5.6-1.7
                  c0.6,0.1,1.3,0.2,2,0.2c5.5,0,10-4,10-9S17.5,2,12,2z M8,11c-0.8,0-1.5-0.7-1.5-1.5S7.2,8,8,8s1.5,0.7,1.5,1.5S8.8,11,8,11z
                   M16,11c-0.8,0-1.5-0.7-1.5-1.5S15.2,8,16,8s1.5,0.7,1.5,1.5S16.8,11,16,11z"/>
              </svg>
            </button>
            <div class="absolute bottom-full left-1/2 -translate-x-1/2 mb-2 w-32 p-2 bg-white rounded-lg shadow-xl opacity-0 group-hover:opacity-100 transition-opacity pointer-events-none group-hover:pointer-events-auto">
              <div class="text-center text-xs text-slate-900 mb-1">关注我们</div>
              <!-- Placeholder for QR Code -->
              <div class="w-full aspect-square bg-slate-200 rounded flex items-center justify-center text-xs text-slate-400">
                二维码
              </div>
            </div>
          </div>

          <a
            href="mailto:gxygxxkj@163.com"
            class="w-10 h-10 flex items-center justify-center rounded-lg bg-slate-800 text-slate-400 hover:bg-blue-600 hover:text-white transition-all"
            aria-label="Email"
          >
            <Mail className="w-5 h-5" />
          </a>
        </div>
      </div>

      <!-- Quick Links -->
      <div>
        <h3 class="text-sm font-semibold uppercase tracking-wider text-white mb-6">
          快速链接
        </h3>
        <ul class="space-y-3">
          {NAVIGATION.map((item) => (
            <li>
              <a
                href={item.href}
                class="text-sm text-slate-400 hover:text-blue-400 transition-colors inline-flex items-center group"
              >
                <span class="w-0 group-hover:w-2 h-0.5 bg-blue-400 transition-all mr-0 group-hover:mr-2"></span>
                {item.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Services -->
      <div>
        <h3 class="text-sm font-semibold uppercase tracking-wider text-white mb-6">
          核心业务
        </h3>
        <ul class="space-y-3">
          <li>
            <a href="/capabilities" class="text-sm text-slate-400 hover:text-blue-400 transition-colors inline-flex items-center group">
              <span class="w-0 group-hover:w-2 h-0.5 bg-blue-400 transition-all mr-0 group-hover:mr-2"></span>
              遥感监测
            </a>
          </li>
          <li>
            <a href="/capabilities" class="text-sm text-slate-400 hover:text-blue-400 transition-colors inline-flex items-center group">
              <span class="w-0 group-hover:w-2 h-0.5 bg-blue-400 transition-all mr-0 group-hover:mr-2"></span>
              实景三维
            </a>
          </li>
          <li>
            <a href="/capabilities" class="text-sm text-slate-400 hover:text-blue-400 transition-colors inline-flex items-center group">
              <span class="w-0 group-hover:w-2 h-0.5 bg-blue-400 transition-all mr-0 group-hover:mr-2"></span>
              智慧规划
            </a>
          </li>
          <li>
            <a href="/capabilities" class="text-sm text-slate-400 hover:text-blue-400 transition-colors inline-flex items-center group">
              <span class="w-0 group-hover:w-2 h-0.5 bg-blue-400 transition-all mr-0 group-hover:mr-2"></span>
              智慧规划
            </a>
          </li>
          <li>
            <a href="/announcements" class="text-sm text-slate-400 hover:text-blue-400 transition-colors inline-flex items-center group">
              <span class="w-0 group-hover:w-2 h-0.5 bg-blue-400 transition-all mr-0 group-hover:mr-2"></span>
              公司公告
            </a>
          </li>
        </ul>
      </div>

      <!-- Contact -->
      <div>
        <h3 class="text-sm font-semibold uppercase tracking-wider text-white mb-6">
          联系我们
        </h3>
        <ul class="space-y-3 text-sm">
          <li>
            <div class="text-slate-400">
              <strong class="text-white block mb-1">地址：</strong>
              广西南宁市青秀区建政路5号
            </div>
          </li>
          <li>
            <div class="text-slate-400">
              <strong class="text-white block mb-1">电话：</strong>
              0771-4836481
            </div>
          </li>
          <li>
            <div class="text-slate-400">
              <strong class="text-white block mb-1">邮箱：</strong>
              gxygxxkj@163.com
            </div>
          </li>
        </ul>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="mt-16 pt-8 border-t border-slate-800">
      <div class="flex flex-col md:flex-row items-center justify-between space-y-4 md:space-y-0">
        <p class="text-sm text-slate-400">
          &copy; {new Date().getFullYear()} {SITE.author}. All rights reserved.
        </p>
      </div>
    </div>
  </div>
</footer>
